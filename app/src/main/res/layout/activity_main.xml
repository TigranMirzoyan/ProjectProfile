<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/top_background">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="Welcome, To Profile !"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:text="Here you can see your badges and so on."
            android:textColor="@color/black"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/text2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/man" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/relative2"
        android:layout_below="@id/relative1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="-65dp"
        android:background="@drawable/middle_background"
        android:orientation="vertical">

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/user_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:height="100dp"
            android:ems="10"
            android:hint="Surname"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/user_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Age"
            android:inputType="number"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/user_biography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Biography"
            android:inputType="textMultiLine"
            android:minHeight="80dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/button1"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/btn"
            android:text="badges"
            android:textColor="@color/white"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginStart="200dp"
            android:background="@drawable/btn"
            android:text="map"
            android:textColor="@color/white"
            android:textSize="25dp"/>

    </RelativeLayout>
</RelativeLayout>

